<h2 class="title"><%= @title %></h2>

<form action="/notes/new" method="post">
  <div class="field">
    <label class="label" for="">Title</label>
    <input class="input" type="text" name="title">
  </div>
  <div class="field">
    <div class="control">
      <label class="label" for="note">Noto</label>
      <textarea id="note" class="textarea" name="body" placeholder="ここに入力"></textarea>
    </div>
  </div>
  <div class="field">
    <button class="button is-primary" type="submit">Save</button>
  </div>
</form>
